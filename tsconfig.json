{
  "include": ["db/**/*", "./**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "target": "es2017",
    "incremental": true,
    "tsBuildInfoFile": "./",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node",],
    "paths": {
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"],
    }
  }
}
